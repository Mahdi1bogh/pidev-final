{% extends 'base-back.html.twig' %}

{% block title %}Product{% endblock %}

{% block body %}
<div  class="container">
    <div class="row">
    <h1>Product</h1>
<ul style="margin-top:100px;margin-left:300px ">
        <div style="display:flex">
        <a style="margin-right:20px" href={{path("app_product_index")}}>All products</a>
        <a href={{path("app_product_new")}}>Add product </a>
        
        {{ include('product/_delete_form.html.twig') }}
        </div>
    </ul>
    
    <table style="margin-left:300px;margin-top:20px" class="table">
    
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ product.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ product.title }}</td>
            </tr>
            <tr>
                <th>Price</th>
                <td>{{ product.price }}</td>
            </tr>
            <tr>
                <th>Qty</th>
                <td>{{ product.Qty }}</td>
            </tr>
            <tr>
                <th>Category</th>
                <td>{{ product.category }}</td>
            </tr>
            <tr>
                <th>Img</th>
                <td><div class="product-thumb">
                                    <a href="#"><img src={{product.img}} alt="" height="220"></a>
                                </div></td>
            </tr>
        </tbody>
    </table>
    
  

    
    
    </div>
    </div>
{% endblock %}
