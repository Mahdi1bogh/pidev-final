{% extends 'base-front.html.twig' %}

{% block title %}Wishlist{% endblock %}

{% block body %}
    <div class="container mt-5">
        <h1>Your Wishlist</h1>
        <div class="row">
            {% for product in produits %}
                <div class="col-lg-4 col-md-6 mb-4">
                    <div class="card h-100">
                    <a href="#"><img style="height: 200px; object-fit: cover;" src="{{ product.img }}" alt=""></a>
                    <div class="card-body">
                        <h4 class="card-title">
                            <a href="#">{{ product.title }}</a>
                        </h4>
                        <h5>${{ product.price }}</h5>
                    </div>
                    <div class="card-footer">
                        <div class="d-flex justify-content-between">
                            <small class="text-muted">{{ product.category }}</small>
                            <div class="text-warning">
                                {% for i in range(1,product.rating) %}
                                    <i class="fas fa-star"></i>
                                {% endfor %}
                            </div>
                        </div>
                        <div class="d-flex justify-content-between align-items-center mt-2">
                            <a href="#" >View Details</a>
                            <a href="{{path("cart_add", {id: product.id})}}"  class="add-to-cart-icon"><i class="fas fa-shopping-cart"></i></a>
                            <a href="{{ path('cart_wishlist_remove', { 'productId': product.id }) }}"><i class="fas fa-times"></i></a>
                        </div>
                    </div>
                  </div>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}