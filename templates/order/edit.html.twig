{% extends 'base-back.html.twig' %}

{% block body %}
<div style="margin-left:400px;margin-top:100px">
    <h1>Edit Order</h1>

    {{ form_start(form) }}
        {{ form_row(form.adresse) }}
     
        <h3>Order Items</h3>
        <table>
            <thead>
                <tr>
                    <th>Product</th>
                    <th>Quantity</th>
                    <th>Price</th>
                    <th>Total</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                {% for orderItem in form.orderItem %}
                    <tr>
                        <td>{{ form_row(orderItem.prod) }}</td>
                        <td>{{ form_row(orderItem.Qty) }}</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
        <hr>

        <button type="submit" class="btn btn-primary">Save</button>
    {{ form_end(form) }}
    </div>
{% endblock %}
