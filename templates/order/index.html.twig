{% extends 'base-back.html.twig' %}
{% block body %}
    <h1 style="margin-top:100px">Orders</h1>
    <hr>

   
    <div style="margin-left:300px;width:900px" class="container">
  <div class="row">
    <div class="col-sm-12 col-md-6 offset-md-3">
      <h1>Filter Orders by Date Range</h1>
      <form id="filter-form">
        <div class="form-group">
          <label for="start-date">Start Date:</label>
          <input type="date" id="start-date" name="start_date" class="form-control">
        </div>
        <div class="form-group">
          <label for="end-date">End Date:</label>
          <input type="date" id="end-date" name="end_date" class="form-control">
        </div>
        <button type="submit" class="btn btn-primary">Filter</button>
      </form>
      <hr>
      {# <div id="order-list"></div> #}
    </div>
  </div>
</div>

    <table style="margin-left:300px;width:900px" class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Total Price</th>
                <th>Created At</th>
                <th>Address</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody >
            {% for order in orders %}
                <tr>
                    <td>{{ order.id }}</td>
                    <td>{{ order.totalprice }}</td>
                    <td>{{ order.createdAt|date('Y-m-d H:i:s') }}</td>
                    <td>{{ order.adresse }}</td>
                    <td>
                        <a href="{{ path('app_order_show', {'id': order.id}) }}" class="btn btn-primary">Show</a>
                        <a href="{{ path('app_order_edit', {'id': order.id}) }}" class="btn btn-secondary">Edit</a>
                        {{ include('order/_delete_form.html.twig') }}
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="5">No orders found.</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

    <div style="margin-left:500px">

    </div>
{% endblock %}
