{% extends 'base-back.html.twig' %}

{% block title %}Participant index{% endblock %}




  

    

{% block body %}
     


        
            <div class="main-content">

                <div class="page-content">
                    <div class="container-fluid">

                        <!-- start page title -->
                        <div class="row">
                            <div class="col-12">
                                <div class="page-title-box d-sm-flex align-items-center justify-content-between">
                                    <h4 class="mb-sm-0">Participant</h4>

                           

                                </div>
                            </div>
                        </div>
                        <!-- end page title -->

                        <div class="row">
                            <div class="col-lg-12">
                                <div class="card">
                                    <div class="card-header">
                                        <h4 class="card-title mb-0">Liste participant</h4>
                                    </div><!-- end card header -->

                                    <div class="card-body">
                                        <div id="customerList">
                                            <div class="row g-4 mb-3">
                                                <div class="col-sm-auto">
                                                    <div>
                                                        <a href="{{ path('app_participant_new') }}"  type="button" class="btn btn-success waves-effect waves-light">Ajouter</a>
                                                        <a href="#"  type="button" class="btn btn-dark waves-effect waves-light" >Télécharger PDF</a>
                                                    </div>
                                                </div>
                                                <div class="col-sm">
                                                    <div class="d-flex justify-content-sm-end">
                                                        <div class="search-box ms-2">
                                                           
                                                            <input type="text" class="form-control search" placeholder="Search...">
                                                            <i class="ri-search-line search-icon"></i>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                            
                                            <div class="table-responsive table-card mt-3 mb-1">
                                                <table class="table align-middle table-nowrap" id="customerTable">
                                                    <thead class="table-light">
                                                        <tr>
                                                            <th scope="col" style="width: 50px;">
                                                                <div class="form-check">
                                                                    <input class="form-check-input" type="checkbox" id="checkAll" value="option">
                                                                </div>
                                                            </th>
                                                            
                 
                                                            <th class="sort" >Id</th>
                                                            <th class="sort" >Nom</th>
                                                            <th class="sort" >Prénom</th>
                                                            <th class="sort" >Tournois</th>
                                                            <th class="sort" data-sort="date">Date Participation</th>
                                                           
                                                            <th class="sort" data-sort="action">Action</th>
                                                            </tr>
                                                    </thead>
                                                    <tbody class="list form-check-all">
                                                     {% for participant in participants %}
                                                        <tr>
                                                            <th scope="row">
                                                                <div class="form-check">
                                                                    <input class="form-check-input" type="checkbox" name="checkAll" value="option1">
                                                                </div>
                                                            </th>
                                                            <td class="id" style="display:none;"><a href="javascript:void(0);" class="fw-medium link-primary">#VZ2101</a></td>
                                                            <td class="customer_name">{{ participant.id }}</td>
                                                            <td class="email">{{ participant.users.nom }}</td>
                                                            <td class="email">{{ participant.users.prenom }}</td>
                                                            <td class="phone">{{ participant.tournois.title }}</td>
                                                            <td class="date">{{ participant.dateP ? participant.dateP|date('Y-m-d H:i:s') : '' }}</td>
                                                            
                                                            <td>
                                                                <div class="d-flex gap-2">
                                                                    <div class="edit">
                                                                    <a href="{{ path('app_participant_edit', {'id': participant.id}) }}" type="button" class="btn btn-warning waves-effect waves-light">Modifier</a>
                                                                    
                                                                    </div>
                                                                    <div class="remove">
                                                                       <a type="button" >{{ include('participant/_delete_form.html.twig') }}</a>
                                                                    </div>
                                                                </div>
                                                            </td>
                                                        </tr>
                                                     {% endfor %}   
                                                    
                                                    </tbody>
                                                </table>
                                                <div class="noresult" style="display: none">
                                                    <div class="text-center">
                                                        <lord-icon src="https://cdn.lordicon.com/msoeawqm.json" trigger="loop"
                                                            colors="primary:#121331,secondary:#08a88a" style="width:75px;height:75px">
                                                        </lord-icon>
                                                        <h5 class="mt-2">Sorry! No Result Found</h5>
                                                        <p class="text-muted mb-0">We've searched more than 150+ Orders We did not find any
                                                            orders for you search.</p>
                                                    </div>
                                                </div>
                                            </div>
                                            
                                            <div class="d-flex justify-content-end">
                                                <div class="pagination-wrap hstack gap-2">
                                                    <a class="page-item pagination-prev disabled" href="#">
                                                        Previous
                                                    </a>
                                                    <ul class="pagination listjs-pagination mb-0"></ul>
                                                    <a class="page-item pagination-next" href="#">
                                                        Next
                                                    </a>
                                                </div>
                                            </div>
                                        </div>
                                    </div><!-- end card -->
                                </div>
                                <!-- end col -->
                            </div>
                            <!-- end col -->
                        </div>
                        <!-- end row -->

                     

                       

                    

                    </div>
                    <!-- container-fluid -->
                </div>
                <!-- End Page-content -->

               
            </div>
            <!-- end main content-->

        
        <!-- END layout-wrapper -->
{% endblock %}